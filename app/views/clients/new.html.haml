= render :partial => "layouts/header"
.container
  .row
    .span2.adminForm
      %h2
        Add client
    .span10.adminForm
      - form_for @client, :url => clients_path, :html => { :multipart => true } do |f|
        = f.label :name
        = f.text_field :name
        .clear
        = f.label :description
        = f.text_area :description
        .clear
        = f.label :role
        = f.text_area :role
        .clear
        = f.label :logo
        .clear
        = f.file_field :logo
        .clear
          %a{:href => "#", :class => "removenew"}
            Remove
        .clear
        = f.submit "Send", {:class => "btn-inverse admnbutton"}
= render :partial => "layouts/footer"

