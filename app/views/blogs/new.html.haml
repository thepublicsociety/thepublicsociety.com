= render :partial => "layouts/header"
.container
  .row
    .span2.adminForm
      %h2
        Add post
    .span10.adminForm.blogForm
      - form_for @blog, :html => { :multipart => true } do |f|
        = f.label :name
        = f.text_field :name
        .clear
        = f.label :category
        = f.text_field :category
        .clear
        = f.label :content
        .clear
        .words
          Characters remaining:
          %span#word-count-blog_content
            725
        = f.text_area :content
        .clear
        = label_tag "Image"
        = f.file_field :photo
        .clear
        = label_tag "Image 2"
        = f.file_field :photo2
        .clear
        = label_tag "Image3"
        = f.file_field :photo3
        .clear
        = label_tag "Image4"
        = f.file_field :photo4
        .clear
        = label_tag "Image5"
        = f.file_field :photo5
        .clear
        = f.label :position
        = f.text_field :position, :placeholder => "230-375"
        .clear
        = f.submit "Send", {:class => "btn-inverse admnbutton"}
        
= render :partial => "layouts/footer"